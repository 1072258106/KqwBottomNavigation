<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selecter_bottom_navigation_button1"
            android:gravity="center"
            android:checked="true"
            android:text="首页"
            android:textColor="@drawable/selecter_bottom_navigation_color" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selecter_bottom_navigation_button2"
            android:gravity="center"
            android:text="付款"
            android:textColor="@drawable/selecter_bottom_navigation_color" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selecter_bottom_navigation_button3"
            android:gravity="center"
            android:text="收款"
            android:textColor="@drawable/selecter_bottom_navigation_color" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selecter_bottom_navigation_button4"
            android:gravity="center"
            android:text="我"
            android:textColor="@drawable/selecter_bottom_navigation_color" />

    </RadioGroup>

</RelativeLayout>